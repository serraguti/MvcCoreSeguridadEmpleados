<h1 style="color:blue">
    Log In Empleados
</h1>

<form method="post">
    <label>Apellido: </label>
    <input type="text" name="username"
           class="form-control"/>
    <br/>
    <label>Password: </label>
    <input type="text" name="password"
           class="form-control"/>
    <br/>
    <button type="submit" class="btn btn-info">
        Log In
    </button>
</form>
<h2 style="color:red">
    @ViewData["MENSAJE"]
</h2>